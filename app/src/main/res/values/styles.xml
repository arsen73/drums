<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="NoteIm">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/circle_dark</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:paddingLeft">@dimen/button_padding_h</item>
        <item name="android:paddingRight">@dimen/button_padding_h</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_background_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">#513d24</item>
    </style>

    <style name="ButtonSmallText" parent="Button">
        <item name="android:textSize">@dimen/button_text_size_small</item>
        <item name="android:paddingLeft">@dimen/button_padding_h_small</item>
        <item name="android:paddingRight">@dimen/button_padding_h_small</item>
    </style>

    <style name="Xtext">
        <item name="android:textSize">@dimen/x_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#513d24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="Note12">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:onClick">onclickNote</item>
        <item name="android:background">@drawable/circle_empty</item>
    </style>
    <style name="Note12text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:textSize">@dimen/x_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#513d24</item>
    </style>

</resources>
